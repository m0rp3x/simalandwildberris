@page "/counter"

@inject HttpClient Client

<MudPaper Class="pa-6 mx-auto mt-8" Style="max-width: 800px;" Elevation="4">
    <MudText Typo="Typo.h5">Тест </MudText>
    
    <MudTextField @bind-Value="vendorCode"></MudTextField>
    
    <MudButton OnClick="AddAccount" Variant="Variant.Filled" Color="Color.Primary" Class="mt-2">Тест</MudButton>
</MudPaper>
@code {
    private string vendorCode = string.Empty;

    private async Task AddAccount(){
        var res = await Client.GetAsync($"api/Wildberries/wbItem/{vendorCode}");
    }

}
